<div>
    <nav class="navbar nav-bar">
        <a class="navbar-brand" href="/profile/my-profile"><i class="fas fa-home"></i> Home</a>
        <a class="navbar-brand" href="/search"><i class="fas fa-search"></i> Search</a>
        <a class="navbar-brand" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </nav>
</div>
<section>
    <div class="container">
        <div class="card text-white bg-dark col-md-5">
            <div class="card-header">
                <h3>Playlist: {{playlistInfo.Name}}</h3>
            </div>
            {{#if playlistInfo.Media.length}}
            <ul class="list-group list-group-flush text-white bg-dark ">
            </ul>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="playlists">
            <article>
                <h3 class="playlist-header">Playlist: {{playlistInfo.Name}} <span class="playlist-status-{{playlistInfo.Status}}">({{playlistInfo.Status}})</span></h3>
                {{#if hidePlaylist}}
                {{else}}
                {{#if isLoggedInUser}}
                {{#if isPublic}}
                <a href="/playlist/{{playlistInfo._id}}/private">Make playlist private.</a>
                {{else}}
                <a href="/playlist/{{playlistInfo._id}}/public">Make playlist public.</a>
                {{/if}}
                {{else}}
                {{#if isMusicPlaylist}}
                <p>Like this playlist?<a href="/playlist/{{playlistInfo._id}}/import/favorites" target="_blank"> You
                        can import all the songs by clicking here.</a></p>
                {{else}}
                <p>Like this playlist?<a href="/playlist/{{playlistInfo._id}}/import/watchlater" target="_blank"> You
                        can import all the movies by clicking here.</a></p>
                {{/if}}
                {{/if}}
                {{#if playlistInfo.Media.length}}
                {{#each playlistInfo.Media}}
                {{#if this.name}}
                <div class="playlist-tracks">
                    <p><span class="song-name"><a href={{this.previewUrl}} target="_blank">{{this.name}}</a></span>
                        &nbsp;-- by
                        <span class="artist-name">{{this.artist}}</span></p>
                    <p>Preview it <a href={{this.previewUrl}} target="_blank">here</a> or search on Spotify</p>
                </div>
                {{else}}
                <div class="playlist-movies">
                    <img src={{this.poster}} alt="Poster">
                    <p><span class="song-name">{{this.title}}, {{this.year}}</span> &nbsp;-- by <span class="artist-name">{{this.director}}</span></p>
                    <p>Rating: {{this.rating}}/10</p>
                    <p>Actors: {{this.actors}}</p>
                </div>

                {{/if}}
                {{/each}}
                {{else}}
                <p class="italics-text">This playlist is empty.</p>
                {{/if}}
                {{/if}}
                {{/if}}
            </article>
        </div>
    </div>

</section>