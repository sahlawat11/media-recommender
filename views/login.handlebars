<section class="container">
	<div class="login-wrapper">
		<h2>Login</h2>
		<form action="/login" method="POST" id="login-form">
			<div class="form-group">
				<label for="userEmail">Email address:
					<input type="email" name="userEmail" class="form-control" id="userEmail" required />
				</label>
			</div>
			<div class="form-group">
				<label for="password">Password:
					<input type="password" class="form-control" name="password" id="password" required />
				</label>
			</div>
			<button type="submit" class="btn btn-default submit-btn">Submit</button>
			<a class="register-link" href="/register">Register</a>
		</form>
		{{#if hasErrors}}
		<p class="error">{{error}}</p>
		{{/if}}
	</div>
</section>